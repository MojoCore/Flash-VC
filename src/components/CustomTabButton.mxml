<?xml version="1.0"?>
<s:Group xmlns:fx="http://ns.adobe.com/mxml/2009" xmlns:mx="library://ns.adobe.com/flex/mx"
        xmlns:s="library://ns.adobe.com/flex/spark">
  <fx:Script><![CDATA[
    import mx.containers.ViewStack;

    private var _title:String;
    private var _subtitle:String;
    private var _activeTab:int=0;
    private var _viewStack:ViewStack;
    private var _otherTabButton:CustomTabButton;
    public function get title(){

    }
    public function set title(value:String){
      _title=value;
      titleLabel.text=_title;
    }
    public function set subtitle(value:String){
      _subtitle=value;
      subtittleLabel.text=_subtitle;
    }
    public function set activeTab(value:int){
      _activeTab=value;
    }
    public function set viewStack(value:ViewStack){
      _viewStack=value;
    }
    public function set otherTabButton(value:CustomTabButton){
      _otherTabButton=value;
    }

    public function ActiveTab():void{
      _viewStack.selectedIndex=_activeTab;
      button.selected=true;
      _otherTabButton.button.selected=false;

    }
    ]]></fx:Script>

  <s:VGroup width="100%" top="0" left="0">
  <s:HGroup width="100%" useHandCursor="true" paddingLeft="10" paddingRight="10" paddingTop="5">
    <s:Label textAlign="center" horizontalCenter="0" fontFamily="CustomIcons" text="&#xe604;" color="black" fontSize="16" backgroundAlpha="0"></s:Label>
    <s:Label id="titleLabel" text="{_title}" paddingTop="5" fontWeight="bold" backgroundAlpha="0"></s:Label>
  </s:HGroup>
  <s:Label id="subtittleLabel" fontSize="10" paddingLeft="10">$ 20.00 2 items</s:Label>
  </s:VGroup>
  <s:ToggleButton id="button" width="100%" height="100%" left="0" top="0" click="ActiveTab()" alpha="0.3" skinClass="skins.SkinTabButton"></s:ToggleButton>
</s:Group>